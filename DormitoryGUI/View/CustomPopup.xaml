            <RadioButton Content="전자기기 모범학생" />
            <RadioButton Content="아침운동 모범학생" />
            <RadioButton Content="또 뭐가 있었더라" />
            <RadioButton Content="항목이 뭐가 더 있겠지" />
            <Label Content="직접 입력"/>
            <TextBox />
            <Button Content="완료" />
        </StackPanel>
    </Grid>
</UserControl>
